{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python310", "nodejs", "mysql", "libmysqlclient-dev", "mariadb"],
          "aptPkgs": ["default-libmysqlclient-dev", "libmariadb-dev"]
        },
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "build": {
          "cmds": ["npm ci"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn iPLMver2.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}