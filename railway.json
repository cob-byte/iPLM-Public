{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python", "node"],
      "phases": {
        "setup": {
          "nixPkgs": ["pkg-config", "freetype", "freetype.dev", "libart_lgpl", "libart_lgpl.dev"],
          "commands": [
            "echo âœ… Installing FreeType dev headers",
            "ls /nix/store | grep freetype"
          ]
        }
      }
    },
    "buildCommand": "pip install -r requirements.txt && npm ci"
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn iPLMver2.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
