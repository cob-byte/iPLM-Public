{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python310", "nodejs"],
          "aptPkgs": ["libmariadb-dev", "pkg-config"]
        },
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "build": {
          "cmds": ["python manage.py collectstatic --noinput"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && gunicorn iPLMver2.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}